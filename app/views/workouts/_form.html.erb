<%= form_with model: workout do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
    <% workout.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :group %><br>
    <%= form.text_field :group %><br>
    <% workout.errors.full_messages_for(:group).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :date %><br>
    <%= form.date_field :date %><br>
    <% workout.errors.full_messages_for(:date).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
